{% extends 'admin.html.twig' %}

{% block admin %}
	<div class="d-flex justify-content-between align-items-center">
		<h1>Medias</h1>
		<a href="{{ path('admin_media_index') }}" class="btn btn-primary">Retour</a>
	</div>

	{{ form_start(form) }}
	{{ form_errors(form) }}
	{% if is_granted('ROLE_ADMIN') %}
		{{ form_row(form.user) }}
	{% endif %}
	{{ form_row(form.album) }}
	{{ form_row(form.title) }}
	{% if media is defined and media.path %}
		<div class="mb-3">
			<p>Fichier actuel :</p>
			<img src="/{{ media.path }}" alt="{{ media.title }}" style="max-width: 200px;">
		</div>
	{% endif %}
	{{ form_row(form.file) }}
	<button type="submit" class="btn btn-primary">Ajouter</button>

	{{ form_end(form) }}
{% endblock %}
